<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:clickable="true"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <TextView
        android:id="@+id/tvText"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="italic|bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/card_inner_offset_h"
        android:paddingStart="@dimen/card_inner_offset_h"
        android:paddingRight="@dimen/card_inner_offset_h"
        android:paddingEnd="@dimen/card_inner_offset_h"
        android:paddingTop="@dimen/card_inner_offset_v"
        android:paddingBottom="@dimen/card_inner_offset_v"
        android:gravity="center"
        android:text="@string/default_item_view_text"/>

</android.support.v7.widget.CardView>