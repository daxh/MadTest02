<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.daxh.explore.madtest02">

    <application
        android:name=".MadTest02App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".simple.SimpleExamplesActivity"
            android:label="@string/title_simple_recyclerview_usages_examples"/>

        <activity
            android:name=".simple.SimpleRecyclerViewActivity"
            android:label="@string/title_simple_recyclerview"/>

        <activity
            android:name=".simple.RecyclerViewWithHeadersActivity"
            android:label="@string/title_recyclerview_with_headers"/>

        <activity
            android:name=".simple.MutableRecyclerViewActivity"
            android:label="@string/title_mutable_recycler_view"/>

        <activity
            android:name=".classic.ClassicExamplesActivity"
            android:label="@string/title_classic_recyclerview_usages_examples"/>

        <activity
            android:name=".classic.FilteredRecyclerViewActivity"
            android:label="@string/title_filtered_recyclerview_example"/>

        <activity
            android:name=".classic.SortedRecyclerViewActivity"
            android:label="@string/title_sorted_recyclerview_example"/>

        <activity
            android:name=".classic.InfiniteRecyclerViewActivity"
            android:label="@string/title_infinite_recyclerview_example"/>

        <activity
            android:name=".advanced.RxExamplesActivity"
            android:label="@string/title_rx_recyclerview_usages_examples"/>

        <activity
            android:name=".advanced.RxFilteredRecyclerViewActivity"
            android:label="@string/title_rx_filtered_recyclerview_example"/>

        <activity
            android:name=".advanced.RxSortedRecyclerViewActivity"
            android:label="@string/title_rx_sorted_recyclerview_example"/>

        <activity
            android:name=".advanced.RxInfiniteRecyclerViewActivity"
            android:label="@string/title_rx_sorted_recyclerview_example"/>

    </application>

</manifest>